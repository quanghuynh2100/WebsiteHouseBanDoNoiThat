@model WebsiteHouseBanDoNoiThat.Model.DoiTuong

@{
    ViewBag.Title = "Edit";
}

<h2>Chỉnh sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Đối tượng</h4>
    <hr />
