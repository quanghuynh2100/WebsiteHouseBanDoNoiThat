@model IEnumerable<WebsiteHouseBanDoNoiThat.Model.TheLoai>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách thể loại</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Mã thể loại
        </th>
        <th>
            Tên thể loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaTheLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenTheLoai)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaTheLoai }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTheLoai }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaTheLoai })
        </td>
    </tr>
    }

</table>
