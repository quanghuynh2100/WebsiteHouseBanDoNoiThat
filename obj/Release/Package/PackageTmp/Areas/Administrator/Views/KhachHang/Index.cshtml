@model IEnumerable<WebsiteHouseBanDoNoiThat.Model.KhachHang>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách khách hàng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Mã Khách hàng
        </th>
        <th>
            Tên khách hàng
        </th>
        <th>
            Địa chỉ khách hàng
        </th>
        <th>
            SĐT khách hàng
        </th>
        <th>
            Tên đăng nhập
        </th>
        <th>
            Mật khẩu
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaKhachHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenKhachHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChiKhachHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoaiKhach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenDangNhap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatKhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("CHỉnh sửa", "Edit", new { id = item.MaKhachHang }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaKhachHang }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaKhachHang })
        </td>
    </tr>
    }

</table>
